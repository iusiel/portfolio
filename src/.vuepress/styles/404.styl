.main__404
    display flex
    flex-direction column
    align-items center
    align-content center
    padding 0px 20px
    text-align center

.header__404
    font-size 3rem


.button__404
  margin-top 30px
  color: $yellow2
  text-decoration none

  &::after
    content: '';
    border-bottom: 3px solid $yellow2;
    display: block;
    transform: scale(0);
    transition: all ease 0.2s;

  &.active
    font-weight bold

    &::after
      transform: scale(1);


  &:hover::after
    transform: scale(1);